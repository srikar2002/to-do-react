// Backend Configuration
// Copy this to .env file in the backend directory

PORT=5000
MONGODB_URI=mongodb://localhost:27017/todoapp
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_EXPIRE=7d

// Email Configuration (for task creation notifications)
// For Gmail, use an App Password: https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

// Google Calendar Integration (OAuth2)
// Get credentials from: https://console.cloud.google.com/apis/credentials
// 1. Create OAuth 2.0 Client ID
// 2. Add authorized redirect URI: http://localhost:5000/api/auth/google-calendar/callback (or your production URL)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google-calendar/callback

// Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:3000